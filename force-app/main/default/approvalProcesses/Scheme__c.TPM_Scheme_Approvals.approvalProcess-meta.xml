<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Title__c</field>
        <field>Description__c</field>
        <field>Type__c</field>
        <field>Target_Volume__c</field>
        <field>Target_Sale__c</field>
        <field>Budget_Status__c</field>
        <field>Global_Budget_Status__c</field>
        <field>End_Date__c</field>
        <field>Start_Date__c</field>
        <field>Product_Group__c</field>
        <field>Region__c</field>
        <field>Required_Budget__c</field>
        <field>Budget_Incentivized__c</field>
        <field>Global_Budget__c</field>
        <field>Remaining_Budget__c</field>
        <field>Distributed_Opted__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>rmehta@tpmapp.demo</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Approval from Marketing Head</label>
        <name>Approval_from_Marketing_Head</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Scheme_Pending</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>admin@tpmapp.demo</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approval from Finance Head</label>
        <name>Approval_from_Finance_Head</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Scheme_On_Hold</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>Approval_Processes/Acceptance_Email</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Scheme__c.Status__c</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
        <criteriaItems>
            <field>Scheme__c.Budget_Incentivized__c</field>
            <operation>notEqual</operation>
            <value>0</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Publish_Scheme</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Publish_Scheme</name>
            <type>Task</type>
        </action>
        <action>
            <name>Update_Scheme_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Review_Scheme</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Scheme_Approval_Accepted</name>
            <type>Task</type>
        </action>
        <action>
            <name>Update_Scheme_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Acceptance_Email</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Scheme_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>TPM Scheme Approvals</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
